<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="100"
        android:numeric="integer"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Max number"
        android:key="@string/pref_max_number_key" />
    <ListPreference
        android:defaultValue="@string/model_mode_basic"
        android:title="@string/model_mode_title"
        android:entries="@array/model_modes_list"
        android:entryValues="@array/model_modes_list"
        android:key="@string/pref_model_mode_key" />
</PreferenceScreen>
